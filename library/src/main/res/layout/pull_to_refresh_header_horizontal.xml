<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_inner"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/pull_to_refresh_header_footer_top_bottom_padding"
    android:paddingLeft="@dimen/pull_to_refresh_header_footer_left_right_padding"
    android:paddingRight="@dimen/pull_to_refresh_header_footer_left_right_padding"
    android:paddingTop="@dimen/pull_to_refresh_header_footer_top_bottom_padding">

    <ImageView
        android:id="@+id/pull_to_refresh_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/pull_to_refresh_default_ptr_flip" />

    <ProgressBar
        android:id="@+id/pull_to_refresh_progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />
</FrameLayout>

